{
    "name": "alexandre-le-borgne/oauth-server",
    "description": "Oauth2 PHP server supporting openid",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Alexandre Le Borgne",
            "email": "alex83690@live.fr"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=7.1.0",
        "psr/http-message": "^1.0",
        "guzzlehttp/psr7": "^1.4",
        "firebase/php-jwt": "^5.0",
        "lcobucci/jwt": "^3.2",
        "spomky-labs/jose": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "OAuth2\\": "src/",
            "OAuth2\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^6",
        "guzzlehttp/guzzle": "^6",
        "symfony/twig-bridge": "^4",
        "silex/silex": "^2.0"
    },
    "scripts": {
        "test": "phpunit test/."
